@page
@model Groups.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h4>Make changes to your group</h4>
<br />
<form enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <dl>
            <dt>
                <label asp-for="FileUpload" class="control-label">Group profile image</label>
            </dt>
            <dd>
                <input asp-for="FileUpload" type="file" />
                <span asp-validation-for="FileUpload"></span>
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <label asp-for="Group.Name" class="control-label"></label>
        <input asp-for="Group.Name" class="form-control">
        <span asp-validation-for="Group.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Group.PrivacyType">Select privacy</label>
        <select asp-for="Group.PrivacyType" asp-items="Html.GetEnumSelectList<Privacy>()" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Group.Description" class="control-label"></label>
        <textarea asp-for="Group.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Group.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Group.CityState" class="control-label"></label>
        <input asp-for="Group.CityState" class="form-control" placeholder="City, State">
        <span asp-validation-for="Group.CityState" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>
<a asp-page="Landing" asp-route-id="@Model.Group.GroupId">Back</a>

